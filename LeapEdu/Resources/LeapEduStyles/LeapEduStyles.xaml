<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="DefaultButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundButtonColor}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="Padding" Value="45,13,45,13" />
        <Setter Property="CornerRadius" Value="27" />
        <Setter Property="FontFamily" Value="MontserratBold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="AuthImageButtonStyle" TargetType="ImageButton">
        <Setter Property="HeightRequest" Value="53" />
        <Setter Property="WidthRequest" Value="109" />
        <Setter Property="Aspect" Value="Center" />
        <Setter Property="CornerRadius" Value="23" />
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundImageButtonColor}" />
    </Style>

    <Style x:Key="LabelStyleForEntry" TargetType="Label">
        <Setter Property="FontFamily" Value="MontserratSemiBold" />
        <Setter Property="Padding" Value="13,0,0,0" />
        <Setter Property="FontSize" Value="15" />
    </Style>
</ResourceDictionary>